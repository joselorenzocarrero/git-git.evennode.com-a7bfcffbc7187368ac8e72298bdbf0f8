extends layout
block content 
  .row.banner    
    each coleccion in colecciones[1]
      .card.transbox#l1
        h3#l1
          a.nav-link.active(href='/vientos/?matricula=' + coleccion.matricula + '&papa=' + coleccion.papa + '&view=#section', style='color:' + coleccion.color)= coleccion.elemento
          -if (coleccion.nota[0] !=="")
            button.btn.btn-primary(type='button', data-bs-toggle='modal', data-bs-target='#my'+coleccion.matricula) info
            .modal.fade(id='my'+coleccion.matricula)
              .modal-dialog
                .modal-content
                  .modal-body
                    each parrafo in coleccion.nota
                      p= parrafo                    
                  .modal-footer
                    button.btn.btn-danger(type='button', data-bs-dismiss='modal') cerrar  
  #section.container-fluid.h4
    a.nav-link.active(href='/', style='padding:20px 10px;') volver al inicio
  

    
            